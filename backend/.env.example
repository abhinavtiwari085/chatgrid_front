
# MessageSlack Backend â€“ .env.example
# Copy this file to .env and fill in values.

# Server
PORT=3000
NODE_ENV=development

# Database
DEV_DB_URL=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority
PROD_DB_URL=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority

# Auth
JWT_SECRET=replace_me
JWT_EXPIRY=1h

# App
APP_LINK=http://localhost:5173
ENABLE_EMAIL_VERIFICATION=false

# Email (Nodemailer via Gmail)
MAIL_ID=youremail@gmail.com
MAIL_PASSWORD=your_app_password  # Use a Gmail App Password

# Redis (Bull queues)
REDIS_HOST=localhost
REDIS_PORT=6379

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_FOLDER=chatgrid

# Uploads (optional temp dir override)
TEMP_UPLOAD_DIR=./tmp/uploads

# Misc (optional)
CURRENCY=INR
RECEIPT_SECRET=receipt_1103

